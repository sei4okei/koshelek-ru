@model List<Message>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recent Messages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Recent Messages</h2>
        <div id="messages" class="border p-3" style="height: 300px; overflow-y: auto;">
            @foreach (var message in Model)
            {
                <div class="alert alert-secondary">
                    <strong>@message.Id:</strong> @message.Text
                    <span class="text-muted">@message.DateTime</span>
                </div>
            }
        </div>
    </div>
</body>
</html>
